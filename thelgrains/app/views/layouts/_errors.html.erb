<% if try(:resource) %>
  <% if resource.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(resource.errors.count, 'Campo') %> com problemas: </h3>
      <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
