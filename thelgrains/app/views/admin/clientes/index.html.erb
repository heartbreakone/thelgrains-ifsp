<h1>Lista de Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Telefone</th>
      <th>Serviço Preferido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.telefone %></td>
        <td><%= cliente.servico_favorito %></td>
        <td><%= link_to 'Ver', admin_cliente_path(cliente) %></td>
        <td><%= link_to 'Editar', edit_admin_cliente_path(cliente) %></td>
        <td><%= link_to 'Remover', admin_cliente_path(cliente), method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Cliente', new_admin_cliente_path %>
