<h1>Lista de Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td>R$ <%= produto.valor %></td>
        <td><%= link_to 'Ver', admin_produto_path(produto) %></td>
        <td><%= link_to 'Editar', edit_admin_produto_path(produto) %></td>
        <td><%= link_to 'Remover', admin_produto_path(produto), method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

