<h1>Lista de Funcionários</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>CPF</th>
      <th>Admin?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td data-label="Nome"><%= funcionario.nome %></td>
        <td data-label="CPF"><%= funcionario.user.cpf.add_cpf_mask! %></td>
        <td data-label="Admin?"><%= funcionario.user.admin ? 'Sim' : 'Não' %></td>
        <td><%= link_to 'Ver', admin_funcionario_path(funcionario) %></td>
        <td><%= link_to 'Editar', edit_admin_funcionario_path(funcionario) %></td>
        <td><%= link_to 'Deletar', admin_funcionario_path(funcionario), method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' } %></td>
      </tr>
    <% end %>
    <%= paginate @funcionarios %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Funcionario', new_admin_funcionario_path %>
